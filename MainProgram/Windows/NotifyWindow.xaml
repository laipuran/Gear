<Window x:Class="Toolkit.Windows.NotifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:math="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        xmlns:local="clr-namespace:Toolkit.Windows"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d" AllowsTransparency="True"
        Title="NotifyWindow" WindowStyle="None"
        Background="#00FFFFFF" Topmost="True"
        Height="60" Left="0" Top="0" ShowInTaskbar="False"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}">
    <Window.Resources>
    </Window.Resources>
	<StackPanel
        Orientation="Horizontal"
        HorizontalAlignment="Center">
        <TextBlock
            x:Name="ContentTextBlock"
            FontFamily="得意黑"
            FontSize="48"
            Foreground="White"
            Text=""
            Margin="0,0,20,0"/>
        <Viewbox
            Height="60"
            x:Name="FormulaViewBox">
            <math:FormulaControl
                x:Name="ContentFormulaControl"
                FontSize="32"
                Foreground="White"/>
        </Viewbox>
    </StackPanel>
</Window>
