<Window x:Class="Toolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:modern="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:Toolkit"
        modern:WindowHelper.UseModernWindowStyle="True"
        Title="设置" Height="450" Width="800"
        AllowsTransparency="True" WindowStyle="None"
        Closing="Window_Closing" Icon="Icon.png">
    <Window.Resources>
        <Style TargetType="ContentControl">
            <Setter Property="FontFamily" Value="微软雅黑"/>
        </Style>
    </Window.Resources>

	<ScrollViewer>
        <StackPanel Margin="20">    
            <TextBlock
                Text="设置"
                FontSize="28"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel
	                Grid.Column="0"
	                Margin="10">
                    <TextBlock
	                    Text="轮换的文字（用回车分开）："/>
	                <wpfui:TextBox
                        Margin="0,10,0,0"
	                    x:Name="ContentTextBox"
                        AcceptsReturn="True"/>
                    <wpfui:Button
	                    Margin="0,10,0,0"
                        x:Name="ApplyButton"
                        Click="ApplyButton_Click"
	                    Content="确认"/>
                </StackPanel>

	            <StackPanel
                    Grid.Column="1"
                    Margin="10"
		            Orientation="Vertical">
		            <modern:ToggleSwitch
			            Header="显示为公式"/>
		            <modern:RadioButtons
			            Header="切换模式">
			            <RadioButton
                            x:Name="NormalRadioButton"
				            Content="顺序"
				            IsChecked="True"/>
			            <RadioButton
                            x:Name="ShuffleRadioButton"
				            Content="随机"/>
		            </modern:RadioButtons>
	            </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>

</Window>
