<Window x:Class="Gear.Windows.NotifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:math="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        mc:Ignorable="d" AllowsTransparency="True"
        Title="通知" WindowStyle="None"
        Topmost="True" Background="#00FFFFFF"
        Left="0" Top="0" ShowInTaskbar="False"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"
        Height="{x:Static SystemParameters.PrimaryScreenHeight}">
    <Grid
        VerticalAlignment="Stretch">
        <StackPanel
            Background="#88FFFFFF"
            Panel.ZIndex="3"
            x:Name="DebugStackPanel"
            Orientation="Vertical"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <TextBlock
                Text="Debug Settings"
                FontSize="30"/>
            <TextBlock
                Text="Information"
                FontSize="22"
                Margin="0,10,0,0"/>
            <TextBlock
                Margin="0,5,0,0"
                x:Name="TextQueueTextBlock"
                Text="Empty"
                FontSize="15"
                MouseLeftButtonDown="TextQueueTextBlock_MouseLeftButtonDown"/>
            <TextBlock
                Text="Operations"
                FontSize="22"
                Margin="0,10,0,0"/>
            <Button
                Margin="0,5,0,0"
                VerticalAlignment="Bottom"
                Visibility="Visible"
                x:Name="OpenBannerButton"
                Content="Open Banner"
                Click="OpenBannerButton_Click"/>
            <Button
                Margin="0,5,0,0"
                x:Name="OpenMainWindowButton"
                Content="Open MainWindow"
                Click="OpenMainWindowButton_Click"/>
        </StackPanel>
        <Border
            x:Name="MainBorder"
            Background="#2f52c8"
            Height="300"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Panel.ZIndex="1">
            <Border.RenderTransform>
                <MatrixTransform>
                    <MatrixTransform.Matrix>
                        1, 0.08748, 0, 1, -1, 1
                    </MatrixTransform.Matrix>
                </MatrixTransform>
            </Border.RenderTransform>
            <StackPanel
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    x:Name="MarginTextBlock"
                    Width="0"/>
                <TextBlock
                    x:Name="ToastTextBlock"
                    Text="Content 内容"
                    FontSize="140"
                    Foreground="White"
                    FontFamily="Minecraft AE Pixel"
                    HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <StackPanel
            x:Name="TopStackPanel"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            MouseLeftButtonDown="TopStackPanel_MouseLeftButtonDown">
            <TextBlock
                x:Name="ContentTextBlock"
                FontFamily="Minecraft AE Pixel"
                FontSize="48"
                FontStyle="Italic"
                Height="56"
                Background="#44FFFFFF"
                Foreground="#88000000"/>

            <Viewbox
                Margin="20,0,0,0"
                Height="60"
                x:Name="FormulaViewBox">
                <math:FormulaControl
	                x:Name="ContentFormulaControl"
	                FontSize="32"
	                Background="#44FFFFFF"
                    Foreground="#88000000">
                </math:FormulaControl>
            </Viewbox>
        </StackPanel>
    </Grid>
</Window>
